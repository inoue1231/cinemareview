<%= form_with model: @tweet, url: tweets_path, class:'form-wrap', local: true do |f| %>
  <div class='message-form'>
  <div class="message-field">
  <%= f.file_field :image, id:"tweet-image" %>
      <%= f.label :title,  "記事タイトル" %>
      <%= f.text_area :title, class:"input-message" %>
    </div>
    <div class="message-field">
      <%= f.label :cinematitle,  "映画の題名" %>
      <%= f.text_area :cinematitle, class:"input-message" %>
    </div>
    <div class="message-field">
      <%= f.label :message,  "レビュー（本文）" %>
      <%= f.text_area :message, class:"input-message" %>
    </div>
    <div class="tag-field", id='tag-field'>
      <%= f.label :name, "タグ" %>
      <%= f.text_field :name, class:"input-tag" %>
    </div>
    <div id="search-result">
    </div>
  </div>
  <div class="submit-post">
    <%= f.submit "Send", class: "submit-btn" %>
  </div>
<% end %>